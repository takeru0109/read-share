<div class="container">
  <div class="row">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="col-xs-2">(姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class: "form-control" %></div>
    <div class="col-xs-2">(名)<%= f.text_field :first_name, autocomplete: "first_name",class: "form-control" %></div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <%= f.label :メール,class: "control-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
    </div>
  </div>

　<div class="row">
    <div class="col-xs-4">
      <%= f.label :パスワード,class: "control-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4">
      <%= f.label :パスワード確認,class: "control-label"  %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-1">
      <br>
      <%= f.submit "新規登録",class: "btn btn-warning center-block" %>
    </div>
  </div>
     <% end %>
  <%= render "devise/shared/links" %>
</div>