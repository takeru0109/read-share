<div class="container">
    <div class="row">
	    <%= render 'admin/books/form', book: @book %>
	    <% if @book.errors.any? %>
	     <h3><%= @book.errors.count %>error occurrence</h3>
	        <ul>
	            <% @book.errors.full_messages.each do |message| %>
	             <li><%= message %></li>
	            <% end %>
	        </ul>
	    <% end %>
	</div>
</div>
