<div class="container">
  <div class="row">
    <h3 class="title">書籍</h3>
  </div>

  <div class="row">
    <div class="admin-book-info">
    	<div class="col-xs-5">
        <div class="item-info-image">
            <%= attachment_image_tag(@book, :image,id: "preview", size: '400x300', fallback: "no_image.jpg") %>
        </div>
      </div>

      <div class="col-xs-6">
      	<div class="info-content">
      		<p class="info-head">書籍</p>
      		<p class="item-info-text"><%= @book.name %></p>
      	</div>

      	<div class="info-content">
      		<p class="info-head">書籍説明説明</p>
      		<p class="item-info-text"><%= @book.description %></p>
      	</div>

      	<div class="info-content">
      		<p class="info-head">ジャンル</p>
      		<p class="item-info-text"><%= @book.genre.name %></p>
      	</div>

      	<div class="actions text-right">
          <%= link_to "編集する",edit_admin_book_path, class: "btn-lg btn-primary" %>
        </div>
  		</div>
  	</div>
  </div>
</div>