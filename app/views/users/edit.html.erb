<div class="container">
  <div class="row">

    <h9>edit_user</h9>

    <%= form_for @user do |f| %>
      <div class="form-horizontal">
        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :last_name, "名前" , class: "control-label" %>
          </div>
          <div class="col-xs-3">(姓)<%= f.text_field :last_name,class: "name form-control" %></div>
          <div class="col-xs-3">(名)<%= f.text_field :first_name, class: "form-control" %></div>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :email, "メールアドレス", class: "control-label" %>
          </div>
          <div class="col-xs-6"><%= f.email_field :email, class: "form-control"%></div>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :description, "紹介文", class: "control-label" %>
          </div>

          <div class="col-xs-6">
            <%= f.text_area :description, class: "form-control", rows: "8",
            placeholder:'好きな本やジャンルなどを書いてみよう！！' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-3">
            <%= f.label :nick_name, "ニックネーム", class: "control-label" %>
        </div>
        <div class="col-xs-6"><%= f.text_field :nick_name,class: "form-control" %></div>
      </div>


      <div class="actions">
        <div class="col-xs-3">
            <%= f.submit "編集内容を保存する", class: " btn btn-warning col-xs-offset-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>