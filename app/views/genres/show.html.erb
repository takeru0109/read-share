<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h9 style="border-bottom: 1px solid silver; margin-bottom: 10px;">Genre</h9>
			<div class="row">
				<% @parents.each do |parent| %>
					<div class="row" style="margin-left: 10px; padding-bottom: 5px;">
						<%= link_to genre_show_path(parent.id) do %>
						<h3><%= parent.name %> >></h3>
						<% end %>
					</div>
						<% parent.children.each do |child| %>
							<div class="row" style="margin-left: 10px; padding-bottom: 5px; padding-left: 50px;">
								<%= link_to genre_show_path(child.id) do %>
								<%= child.name %>
								<% end %>
							</div>
						<% end %>
				<% end %>
			</div>
		</div>
		<div class="col-xs-9">
		 	<div class="row">
		 		<h3 style="text-center">book_all</h3>
			    <% @books.each do |book| %>
			    	<div class="col-xs-3">
			    		<div class="row">
			    			<div class="col-xs-12">
			                  <%= attachment_image_tag book, :image, id: "preview", size: '150x150', fallback: "no_image.jpg" %>
			                </div>
			            </div>

			    	    <div class="row">
			    		    <div class="col-xs-12">
			    		    	<%= link_to book.name, book_path(book) %>
			    		    </div>
			    		</div>
			    	    <div class="row">
			    			<div class="col-xs-12">
			    				<%= book.author%>
			    			</div>
			    		</div>
			    	</div>
			    <% end %>
		    </div>
		</div>
	</div>
</div>
